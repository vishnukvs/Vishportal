<div class="row">
<aside class="span4">
    <section>
      <h1>
  <strong>Name:</strong>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
</section>
</aside>
<div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <% end %>
      </div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

</div>